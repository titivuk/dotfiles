// Zed keymap
//
// For information on binding keys, see the Zed
// documentation: https://zed.dev/docs/key-bindings
//
// To see the default key bindings run `zed: open default keymap`
// from the command palette.
[
  {
    "context": "!Terminal",
    "bindings": {
      // navigation between panes
      "ctrl-h": "workspace::ActivatePaneLeft",
      "ctrl-l": "workspace::ActivatePaneRight",
      "ctrl-k": "workspace::ActivatePaneUp",
      "ctrl-j": "workspace::ActivatePaneDown",

      // toggle left and right panes (explorer + AI)
      "ctrl-[": "workspace::ToggleLeftDock",
      "ctrl-]": "workspace::ToggleRightDock",

      // open recent project
      "ctrl-shift-r": "projects::OpenRecent",

      // find file
      "ctrl-f": "file_finder::Toggle",
      // command input
      "ctrl-p": "command_palette::Toggle",
      // global search
      "ctrl-shift-f": "workspace::NewSearch"
    }
  },
  {
    "context": "Terminal",
    "bindings": {
      "ctrl-,": "pane::ActivatePreviousItem",
      "ctrl-.": "pane::ActivateNextItem"
    }
  },
  {
    "context": "VimControl && !menu",
    "bindings": {
      // switch between tabs back and forth
      "ctrl-,": "pane::ActivatePreviousItem",
      "ctrl-.": "pane::ActivateNextItem",

      // LSP
      "g d": "editor::GoToDefinition",
      "g d s": "editor::GoToDefinitionSplit",
      "g D": "editor::GoToDeclaration",
      "g t": "editor::GoToTypeDefinition",
      "g t s": "editor::GoToTypeDefinitionSplit",
      "space f r": "editor::FindAllReferences",
      "space h": "editor::Hover",
      "space d": "editor::ToggleDiagnostics",
      "space c a": "editor::ToggleCodeActions",
      "[ d": "editor::GoToPreviousDiagnostic",
      "] d": "editor::GoToDiagnostic",

      // Terminal
      "space t t": "workspace::NewCenterTerminal"
    }
  }
]
